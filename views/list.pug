extends layouts/layout

block content
  h1 List of Names
  table
    thead
      tr
        th Name
        th Action
    tbody
      each item in items
        tr
          td #{item.name}
          td
            a(href='/delete-name/' + item.id class='btn btn-danger') Delete

  // Back button
  a(href='/' style='text-decoration: none; margin-top: 20px; display: inline-block; padding: 10px 15px; background-color: #3498db; color: white; border-radius: 5px;') Back to Home 